@model IEnumerable<ProductModel>

@{
    ViewData["Title"] = "Home Page Admin";
    ViewData["Page"] = "Product";
}
<a class="btn btn-success" asp-action="Create" asp-controller="Product">Add Product</a>
<table class="table table-bordered">
        <thead>
            <tr>
                <th style="width: 10px">#</th>
                <th scope="col">Product Name</th>
                <th scope="col">Product Description</th>
                <th scope="col">Product Price</th>
                <th scope="col">Product Image</th>
                <th scope="col">Product Slug</th>
                <th scope="col">Product Category</th>
                <th scope="col">Product Brand</th>
                <th scope="col">Product Manage</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td scope="row">@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td><img src="~/images/@item.Image" width="120"></td>
                <td>@item.Slug</td>
                <td>@item.Category.Name</td>
                <td>@item.Brand.Name</td>
                <td>
                    <a class="btn btn-info" asp-action="Edit" asp-controller="Product" asp-route-Id="@item.Id">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Product" asp-route-Id="@item.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <ul class="pagination pagination-sm m-0 float-end">
        <li class="page-item"> <a class="page-link" href="#">«</a> </li>
        <li class="page-item"> <a class="page-link" href="#">1</a> </li>
        <li class="page-item"> <a class="page-link" href="#">2</a> </li>
        <li class="page-item"> <a class="page-link" href="#">3</a> </li>
        <li class="page-item"> <a class="page-link" href="#">»</a> </li>
    </ul>
